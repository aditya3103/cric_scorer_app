<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scorer00">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/scorer_icon"
        android:label="Cricket Scorer"
        android:roundIcon="@mipmap/scorer_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scorer00">
        <activity android:name=".scoring" />
        <activity android:name=".playerSelection" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>